<fest:template xmlns:fest="http://fest.mail.ru">
	<div class="header">
		<h1 class="header__h1 header__h1_50">
			SIGN UP
    	</h1>
	</div>

	<div class="content">
		<div id="signup-alert" class="alert alert-danger signup-alert" style="display: none">
			<span id="signup-alert-text"></span>
		</div>

		<form method="POST" action="" id="sign-up-form" class="form-sign-up form-horizontal">
			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="Email" class="control-label content__label">Email</label>
				</div>
				<div class="col-md-9">
					<input type="email" class="form-control _no-border _bold" name="email" placeholder="Email" />
				</div>
			</div>

			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="password" class="control-label content__label">Password</label>
				</div>
				<div class="col-md-9">
					<input type="password" class="form-control _no-border _bold" name="password" placeholder="password" />
				</div>
			</div>

			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="nickname" class="control-label content__label">Nickname</label>
				</div>
				<div class="col-md-9">
					<input type="text" name="nickname" class="form-control _no-border _bold" placeholder="login" />
				</div>
			</div>

			<div class="form-group form-group-lg">
				<div class="col-md-3">
					<label for="avatar" class="control-label content__label">Avatar</label>
				</div>
				<div class="col-md-9 _no-padding-left">
					<div class="col-md-6">
						<div id="preview" class="avatar-preview pull-left">
							<img src="/images/default-img.png" height="170" width="170" />
						</div>
					</div>
					<div class="col-md-6 _no-padding-right">
						<button id="upload-btn" class="btn btn-default content__btn _no-border _upload">
							<span class="glyphicon glyphicon-download-alt"></span>
							Upload the image
						</button>
						<button id="webcamera-btn" class="btn btn-default content__btn _no-border _upload _mar-t-5">
							<span class="glyphicon glyphicon-camera"></span>
							Take a photo
						</button>
					</div>
				</div>
			</div>


			
			<button id="startWebBtn">startWeb</button>
			<button id="startBtn">start</button>
			<button id="shotBtn">shot</button>
			<div id="previews"></div>

			<button class="btn btn-primary btn-lg content__btn _no-border" type="submit">Register</button>
		</form>
	</div>

	<div class="footer">
		<h3>
			<a href="/#main" class="footer__a">
				<span class="glyphicon glyphicon-chevron-left"></span>
				MAIN MENU
			</a>
    	</h3>
	</div>
</fest:template>
